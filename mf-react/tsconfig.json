{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}
